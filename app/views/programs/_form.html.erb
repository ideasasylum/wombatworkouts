<%= form_with model: @program, class: "space-y-6" do |f| %>
  <% if @program.errors.any? %>
    <div class="bg-white border border-red-300 rounded-sm p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @program.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Name", class: "form-label" %>
    <%= f.text_field :title,
          required: true,
          maxlength: 200,
          placeholder: "e.g., Upper Body Strength",
          class: "form-input #{@program.errors[:title].any? ? 'error' : ''}" %>
    <% if @program.errors[:title].any? %>
      <p class="form-error">
        <%= @program.errors.full_messages_for(:title).join(', ') %>
      </p>
    <% end %>
  </div>

  <div>
    <%= f.label :description, "Description (optional)", class: "form-label" %>
    <%= f.text_area :description,
          rows: 5,
          placeholder: "Brief description...",
          class: "form-textarea #{@program.errors[:description].any? ? 'error' : ''}" %>
    <% if @program.errors[:description].any? %>
      <p class="form-error">
        <%= @program.errors.full_messages_for(:description).join(', ') %>
      </p>
    <% end %>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "Cancel", (@program.new_record? ? programs_path : program_path(@program)),
                class: "inline-flex items-center justify-center border font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors rounded-sm px-6 py-3 text-base min-h-[44px] border-[rgb(26,26,26)] border text-[rgb(26,26,26)] bg-white hover:bg-gray-50 focus:ring-gray-900" %>
    <button type="submit" class="inline-flex items-center justify-center border font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors rounded-sm px-6 py-3 text-base min-h-[44px] border-transparent text-white bg-[rgb(26,26,26)] hover:opacity-90 focus:ring-gray-900">
      <%= render "shared/icons/save", class: "w-5 h-5 mr-2" %>
      <%= @program.new_record? ? "Create" : "Save" %>
    </button>
  </div>
<% end %>
