<% content_for :head do %>
  <title><%= @program.title %> - Wombat Workouts</title>
  <meta name="description" content="<%= @program.description.present? ? truncate(@program.description, length: 160) : 'View this exercise program on Fit or Forget' %>">

  <!-- Open Graph tags -->
  <meta property="og:title" content="<%= @program.title %>">
  <meta property="og:description" content="<%= @program.description.present? ? truncate(@program.description, length: 200) : 'View this exercise program on Fit or Forget' %>">
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= program_url(@program) %>">

  <!-- Twitter Card tags -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="<%= @program.title %>">
  <meta name="twitter:description" content="<%= @program.description.present? ? truncate(@program.description, length: 200) : 'View this exercise program on Fit or Forget' %>">
<% end %>

<div class="min-h-screen py-6 md:py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Program Info Card -->
    <div class="bg-white border border-[rgb(204,204,204)] p-6 mb-6">
      <div class="flex items-start justify-between mb-6">
        <div class="flex-grow">
          <h1 class="text-lg font-bold text-[rgb(26,26,26)] leading-7"><%= @program.title %></h1>
          <% if @program.description.present? %>
            <p class="text-base text-gray-600 mt-2 whitespace-pre-wrap"><%= @program.description %></p>
          <% else %>
            <p class="text-base text-gray-400 italic mt-2">No description provided</p>
          <% end %>
        </div>

        <% if @is_owner %>
          <div class="flex items-center gap-2 ml-4">
            <%= render "shared/button",
              type: :icon_only,
              icon: "pencil",
              url: edit_program_path(@program),
              html_options: { "aria-label": "Edit program" } %>

            <%= button_to program_path(@program),
              method: :delete,
              form: { data: { turbo_confirm: "Are you sure you want to delete '#{@program.title}'? This action cannot be undone." } },
              class: "inline-flex items-center justify-center border border-transparent bg-transparent text-[rgb(26,26,26)] hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors p-2 min-h-[44px] min-w-[44px] rounded-sm",
              "aria-label": "Delete program" do %>
              <%= render "shared/icons/trash", class: "w-5 h-5" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Start Workout Button -->
      <% if @program.exercises.any? %>
        <% if logged_in? %>
          <%= render "shared/button",
            text: "Start Workout",
            icon: "play",
            icon_position: :left,
            type: :primary,
            size: :base,
            url: new_workout_path(program_id: @program.uuid),
            html_options: { class: "w-full" } %>
        <% else %>
          <div class="text-center p-6 bg-gray-50 rounded-sm">
            <p class="text-gray-700 mb-4">Sign in to start this workout and track your progress</p>
            <%= render "shared/button",
              text: "Sign In",
              icon: "arrow_right",
              icon_position: :right,
              type: :primary,
              size: :base,
              url: signin_path %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Save to My Programs Button for non-owners -->
    <% if logged_in? && @program.user_id != current_user.id %>
      <div class="mb-6">
        <%= button_to duplicate_program_path(@program),
          method: :post,
          class: "inline-flex items-center justify-center w-full px-6 py-3 border border-transparent text-base font-medium rounded-sm text-white bg-[rgb(26,26,26)] hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors min-h-[44px]" do %>
          <%= render "shared/icons/save", class: "w-5 h-5 mr-2" %>
          Save to My Programs
        <% end %>
      </div>
    <% end %>

    <!-- Exercises Section -->
    <div class="mb-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-base font-semibold text-[rgb(26,26,26)] leading-6">Exercises</h2>
        <% if @is_owner %>
          <%= render "shared/button",
            text: "Add",
            icon: "plus",
            icon_position: :left,
            type: :secondary,
            size: :small,
            url: new_program_exercise_path(@program),
            html_options: { data: { turbo_frame: "exercise-form-frame" } } %>
        <% end %>
      </div>

      <!-- Exercise Form Frame -->
      <%= turbo_frame_tag "exercise-form-frame" %>

      <!-- Exercises List -->
      <%= turbo_frame_tag "exercises-frame" do %>
        <div id="exercises-list" class="space-y-3">
          <% if @program.exercises.any? %>
            <% @program.exercises.each do |exercise| %>
              <%= render 'exercises/exercise', exercise: exercise %>
            <% end %>
          <% else %>
            <div id="empty-exercises-state" class="text-center py-12 bg-white border border-[rgb(204,204,204)]">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No exercises yet</h3>
              <% if @is_owner %>
                <p class="mt-1 text-sm text-gray-500">Get started by adding your first exercise.</p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Signup CTA for non-authenticated users -->
    <% unless logged_in? %>
      <div class="bg-white border border-[rgb(204,204,204)] p-6 text-center">
        <h3 class="text-lg font-bold text-[rgb(26,26,26)] mb-3">Create Your Own Programs</h3>
        <p class="text-gray-600 mb-4">Sign up to build and share exercise programs with your clients.</p>
        <%= render "shared/button",
          text: "Sign Up Free",
          icon: "user_plus",
          icon_position: :left,
          type: :primary,
          size: :base,
          url: signup_path %>
      </div>
    <% end %>
  </div>
</div>
