<div class="min-h-screen py-6 md:py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="bg-white border border-[rgb(204,204,204)] p-8">
      <h1 class="text-lg font-bold text-[rgb(26,26,26)] mb-2"><%= @workout.program_title %></h1>

      <p class="text-[rgb(107,114,128)] mb-6">
        <%= @workout.exercises_data.length %> exercises in this workout
      </p>

      <!-- Begin Workout button - desktop: inline, mobile: hidden (shown as floating button) -->
      <div class="mb-6 hidden md:block">
        <%= button_to workouts_path, method: :post, params: { program_id: @workout.program.uuid }, class: "w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-sm font-medium rounded-sm text-white bg-[rgb(26,26,26)] hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors min-h-[44px]" do %>
          <%= render 'shared/icons/play', class: "w-5 h-5 mr-2" %>
          <span>Begin Workout</span>
        <% end %>
      </div>

      <!-- Exercise list -->
      <div class="space-y-3 mb-6 md:mb-0">
        <% @workout.exercises_data.each_with_index do |exercise, index| %>
          <div class="border border-[rgb(229,231,235)] rounded-sm p-4 bg-[rgb(237,242,247)]">
            <div class="flex items-start gap-3">
              <span class="flex-shrink-0 text-[rgb(107,114,128)] font-medium">
                <%= index + 1 %>
              </span>
              <div class="flex-1">
                <h3 class="font-medium text-[rgb(26,26,26)] text-base"><%= exercise["name"] %></h3>
                <% if exercise["repeat_total"] > 1 %>
                  <p class="text-sm text-[rgb(107,114,128)] mt-1">Set <%= exercise["repeat_instance"] %> of <%= exercise["repeat_total"] %></p>
                <% end %>
                <% if exercise["description"].present? %>
                  <p class="text-sm text-[rgb(107,114,128)] mt-2"><%= exercise["description"] %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Cancel button - desktop only, secondary style -->
      <div class="hidden md:block mt-6">
        <%= link_to "Cancel", program_path(@workout.program), class: "inline-flex items-center justify-center px-6 py-3 border border-[rgb(26,26,26)] text-sm font-medium rounded-sm text-[rgb(26,26,26)] bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors min-h-[44px]" %>
      </div>
    </div>

    <!-- Mobile floating action button - only visible on mobile -->
    <div class="md:hidden fixed bottom-0 left-0 right-0 p-4 bg-white border-t border-[rgb(229,231,235)] shadow-lg z-50">
      <%= button_to workouts_path, method: :post, params: { program_id: @workout.program.uuid }, class: "w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-sm font-medium rounded-sm text-white bg-[rgb(26,26,26)] hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors min-h-[44px]" do %>
        <%= render 'shared/icons/play', class: "w-5 h-5 mr-2" %>
        <span>Begin Workout</span>
      <% end %>
    </div>
  </div>
</div>
