<div class="min-h-screen  py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <%= link_to "â† Back to Programs", programs_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
    </div>

    <div class="bg-white rounded-lg shadow-md p-8">
      <h1 class="text-3xl font-extrabold text-gray-900 mb-6">My Workouts</h1>

      <% if @workouts.any? %>
        <div class="space-y-4">
          <% @workouts.each do |workout| %>
            <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
              <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= workout.program_title %></h3>
              
              <% stats = workout.completion_stats %>
              <p class="text-gray-600 mb-3">
                <%= stats[:completed_count] %> of <%= stats[:total_count] %> exercises complete
              </p>

              <div class="flex items-center justify-between">
                <% if workout.complete? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    Completed
                  </span>
                <% elsif workout.in_progress? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                    In Progress
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                    Not Started
                  </span>
                <% end %>

                <div class="flex gap-2">
                  <%= link_to "View", workout_path(workout), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition-colors min-h-[44px]" %>
                  <%= button_to "Delete", workout_path(workout), method: :delete, form: { data: { turbo_confirm: "Delete this workout?" } }, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors min-h-[44px]" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12 bg-gray-50 rounded-lg">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No workouts yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by browsing programs and starting a workout.</p>
          <%= link_to "Browse Programs", programs_path, class: "mt-4 inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition-colors min-h-[44px]" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
