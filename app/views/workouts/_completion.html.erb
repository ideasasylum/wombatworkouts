<div class="bg-white border border-[rgb(204,204,204)] p-6">
  <!-- Success icon and heading (centered) -->
  <div class="text-center mb-8">
    <!-- Large checkmark icon -->
    <div class="flex justify-center mb-4">
      <%= render 'shared/icons/check', class: 'w-16 h-16 text-[rgb(26,26,26)]' %>
    </div>

    <!-- Heading (h1 style: 18px, weight 700) -->
    <h1 class="text-h1 text-[rgb(26,26,26)] mb-3">Workout Complete!</h1>

    <% stats = @workout.completion_stats %>
    <!-- Summary stats (gray text) -->
    <p class="text-base text-[rgb(107,114,128)] mb-2">
      You completed <%= stats[:completed_count] %> of <%= stats[:total_count] %> exercises
    </p>

    <!-- Timestamp with calendar icon -->
    <% if @workout.completed_at %>
      <div class="flex items-center justify-center text-sm text-[rgb(107,114,128)]">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <%= @workout.completed_at.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
    <% end %>
  </div>

  <!-- Exercise Summary section -->
  <div class="mb-8">
    <h2 class="text-h2 text-[rgb(26,26,26)] mb-4">Exercise Summary</h2>

    <div class="space-y-3">
      <% @workout.exercises_data.each_with_index do |exercise, index| %>
        <div class="bg-[rgb(249,250,251)] rounded-sm p-4 flex items-center justify-between">
          <div class="flex-1">
            <h3 class="text-base font-medium text-[rgb(26,26,26)] mb-1"><%= exercise['name'] %></h3>
            <p class="text-sm text-[rgb(107,114,128)]">reps</p>
          </div>
          <div class="ml-4">
            <% if exercise['completed'] %>
              <div class="inline-flex items-center px-3 py-1 rounded-sm bg-[rgb(243,244,246)] text-sm text-[rgb(26,26,26)]">
                <%= render 'shared/icons/check', class: 'w-4 h-4 mr-1' %>
                Completed
              </div>
            <% elsif exercise['skipped'] %>
              <div class="inline-flex items-center px-3 py-1 rounded-sm bg-[rgb(243,244,246)] text-sm text-[rgb(107,114,128)]">
                Skipped
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action buttons at bottom -->
  <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
    <!-- Browse Programs - secondary/outline style with list icon -->
    <%= link_to programs_path, class: "flex-1 inline-flex items-center justify-center border font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors rounded-sm px-6 py-3 text-base min-h-[44px] border-[rgb(26,26,26)] border text-[rgb(26,26,26)] bg-white hover:bg-gray-50 focus:ring-gray-900" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
      </svg>
      Browse Programs
    <% end %>

    <!-- Done - primary/solid black style -->
    <%= link_to programs_path, class: "flex-1 inline-flex items-center justify-center border font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors rounded-sm px-6 py-3 text-base min-h-[44px] border-transparent text-white bg-[rgb(26,26,26)] hover:opacity-90 focus:ring-gray-900" do %>
      Done
    <% end %>
  </div>
</div>

<% if flash[:notice] == "Workout complete! ðŸŽ‰" %>
  <script type="module">
    import confetti from 'canvas-confetti';

    // Trigger confetti animation
    confetti({
      particleCount: 100,
      spread: 70,
      origin: { y: 0.6 }
    });

    // Additional burst after a short delay
    setTimeout(() => {
      confetti({
        particleCount: 50,
        angle: 60,
        spread: 55,
        origin: { x: 0 }
      });
    }, 250);

    setTimeout(() => {
      confetti({
        particleCount: 50,
        angle: 120,
        spread: 55,
        origin: { x: 1 }
      });
    }, 400);
  </script>
<% end %>
