<%= turbo_frame_tag "signup_flow" do %>
  <div class="mt-8 space-y-6" data-controller="webauthn" data-webauthn-options-value="<%= options.to_json %>" data-webauthn-email-value="<%= email %>" data-webauthn-flow-value="registration" data-webauthn-verify-url-value="<%= verify_signup_path %>">
    <div class="text-center">
      <h3 class="text-h2 text-[rgb(26,26,26)]">Create your account</h3>
      <p class="mt-2 text-base text-[rgb(107,114,128)]">
        We'll use your device's biometric authentication (Face ID, Touch ID, or fingerprint) to secure your account.
      </p>
      <p class="mt-2 text-base font-medium text-[rgb(26,26,26)]">
        Email: <%= email %>
      </p>
    </div>

    <div class="mt-4" data-webauthn-target="loading">
      <div class="flex flex-col justify-center items-center space-y-3">
        <svg class="animate-spin h-10 w-10 text-[rgb(26,26,26)]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span class="text-base text-[rgb(26,26,26)] font-medium">Waiting for biometric verification...</span>
        <p class="text-sm text-[rgb(107,114,128)]">Please complete the biometric prompt on your device</p>
      </div>
    </div>

    <div class="hidden mt-4 rounded-sm bg-white border border-[rgb(229,231,235)] p-4" data-webauthn-target="error">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-[rgb(26,26,26)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-base font-medium text-[rgb(26,26,26)]" data-webauthn-target="errorMessage"></p>
        </div>
      </div>
      <div class="mt-4 text-center">
        <a href="<%= signup_path %>" class="text-base text-[rgb(26,26,26)] hover:opacity-75 font-medium underline">
          Try a different email
        </a>
      </div>
    </div>
  </div>
<% end %>
