<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <%# Header with logo and tagline %>
    <div class="text-center mb-8">
      <h1 class="text-h1 text-[rgb(26,26,26)] mb-2">
        Wombat Workouts
      </h1>
      <p class="text-body text-[rgb(107,114,128)]">
        Track your exercises
      </p>
    </div>

    <%# White card container for form %>
    <div class="bg-white rounded-sm shadow-sm p-8">
      <%= turbo_frame_tag "signin_flow" do %>
        <%= form_with url: create_signin_path, method: :post, class: "space-y-6" do |f| %>
          <%# Email input field %>
          <div>
            <%= f.email_field :email,
                  required: true,
                  autofocus: true,
                  placeholder: "Email",
                  class: "form-input" %>
          </div>

          <%# Action buttons - side by side %>
          <div class="flex gap-3">
            <%# Sign Up button - outline style with user-plus icon %>
            <%= render 'shared/button',
                  text: 'Sign Up',
                  url: signup_path,
                  type: :secondary,
                  icon: 'user_plus',
                  html_options: { class: 'flex-1' } %>

            <%# Sign In button - solid style with arrow-right icon %>
            <%= render 'shared/button',
                  text: 'Sign In',
                  url: '#',
                  type: :primary,
                  icon: 'arrow_right',
                  html_options: {
                    onclick: "this.closest('form').requestSubmit(); return false;",
                    class: 'flex-1'
                  } %>
          </div>
        <% end %>
      <% end %>

      <%# Recovery link %>
      <div class="mt-4 text-center">
        <%= link_to "Lost access? Recover your account", new_account_recovery_path, class: "text-sm text-[rgb(107,114,128)] hover:text-[rgb(26,26,26)]" %>
      </div>
    </div>
  </div>
</div>
