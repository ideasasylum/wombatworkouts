<%
# Flash Messages Component - Popover Style with Auto-Dismiss
#
# Displays flash notice and alert messages as popovers in top-right of content area
# - Notice: Green/success styling with check icon
# - Alert: Yellow/warning styling with alert icon
# - Auto-dismiss after 3 seconds
# - Manual close button
# - Vertical stacking when multiple messages appear
#
# No parameters needed - reads from flash[:notice] and flash[:alert]
%>

<% if flash[:notice] %>
  <div
    popover="manual"
    data-controller="flash"
    class="flash-popover flash-notice">
    <div class="flex items-start gap-3">
      <div class="flex-shrink-0 mt-0.5">
        <%= render 'shared/icons/check', class: 'h-5 w-5 text-green-700' %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
      </div>
      <button
        type="button"
        data-action="click->flash#close"
        class="flex-shrink-0 rounded-sm p-1 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-offset-2 transition-colors"
        aria-label="Dismiss">
        <%= render 'shared/icons/x', class: 'h-4 w-4 text-green-700' %>
      </button>
    </div>
  </div>
<% end %>

<% if flash[:alert] %>
  <div
    popover="manual"
    data-controller="flash"
    class="flash-popover flash-alert">
    <div class="flex items-start gap-3">
      <div class="flex-shrink-0 mt-0.5">
        <%= render 'shared/icons/alert', class: 'h-5 w-5 text-yellow-700' %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-yellow-800"><%= flash[:alert] %></p>
      </div>
      <button
        type="button"
        data-action="click->flash#close"
        class="flex-shrink-0 rounded-sm p-1 hover:bg-yellow-100 focus:outline-none focus:ring-2 focus:ring-yellow-600 focus:ring-offset-2 transition-colors"
        aria-label="Dismiss">
        <%= render 'shared/icons/x', class: 'h-4 w-4 text-yellow-700' %>
      </button>
    </div>
  </div>
<% end %>
