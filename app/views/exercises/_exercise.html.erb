<%
# Determine if current user is owner
is_owner = logged_in? && current_user.id == exercise.program.user_id
%>
<%= turbo_frame_tag "exercise-#{exercise.id}" do %>
  <div id="exercise-<%= exercise.id %>" class="bg-white border border-[rgb(204,204,204)] rounded-sm p-3 md:p-6" data-controller="drag" data-exercise-id="<%= exercise.id %>">
    <div class="flex items-start gap-2">
      <!-- Mobile reorder buttons (far left, pulled into margin) -->
      <% if is_owner %>
        <div class="flex md:hidden flex-col gap-1 flex-shrink-0 -ml-1">
          <button type="button" data-action="click->drag#moveUp" class="p-1 text-[rgb(26,26,26)] hover:bg-gray-100 min-w-[44px] min-h-[44px] flex items-center justify-center rounded-sm" aria-label="Move up">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
            </svg>
          </button>
          <button type="button" data-action="click->drag#moveDown" class="p-1 text-[rgb(26,26,26)] hover:bg-gray-100 min-w-[44px] min-h-[44px] flex items-center justify-center rounded-sm" aria-label="Move down">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
      <% end %>

      <!-- Drag handle (desktop only) -->
      <% if is_owner %>
        <div class="hidden md:block flex-shrink-0 cursor-move drag-handle text-gray-400 hover:text-gray-600 mt-1" draggable="true">
          <%= render "shared/icons/grip_vertical", class: "w-5 h-5" %>
        </div>
      <% end %>

      <div class="flex-grow min-w-0">
        <% if is_owner %>
          <%= link_to edit_exercise_path(exercise),
              data: { turbo_frame: "exercise-#{exercise.id}" },
              class: "group" do %>
            <h3 class="text-base font-medium text-[rgb(26,26,26)] leading-6 group-hover:text-gray-600 transition-colors"><%= exercise.name %></h3>
          <% end %>
        <% else %>
          <h3 class="text-base font-medium text-[rgb(26,26,26)] leading-6"><%= exercise.name %></h3>
        <% end %>

        <p class="text-sm text-gray-600 mt-1">
          <%= pluralize(exercise.repeat_count, 'rep') %>
        </p>

        <% if exercise.description.present? %>
          <div class="prose prose-sm max-w-none mt-2 text-gray-600">
            <%= markdown(exercise.description) %>
          </div>
        <% end %>

        <% if exercise.video_url.present? %>
          <div class="mt-3">
            <% if (embed = video_embed_html(exercise.video_url)) %>
              <%= embed %>
            <% else %>
              <%= link_to exercise.video_url, target: "_blank", class: "text-sm text-[rgb(26,26,26)] hover:underline inline-flex items-center" do %>
                <%= render "shared/icons/play", class: "w-4 h-4 mr-1" %>
                Watch video
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Delete button only -->
      <% if is_owner %>
        <div class="flex items-start flex-shrink-0">
          <%= button_to exercise_path(exercise),
            method: :delete,
            form: { data: { turbo_confirm: "Are you sure you want to delete this exercise?" } },
            class: "inline-flex items-center justify-center border border-transparent bg-transparent text-[rgb(26,26,26)] hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors p-1 md:p-2 min-h-[44px] min-w-[44px] rounded-sm",
            "aria-label": "Delete exercise" do %>
            <%= render "shared/icons/trash", class: "w-5 h-5" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
