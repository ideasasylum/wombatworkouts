<%= form_with model: exercise, url: exercise.new_record? ? program_exercises_path(program) : exercise_path(exercise), class: "space-y-4" do |f| %>
  <% if exercise.errors.any? %>
    <div class="rounded-sm bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% exercise.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Exercise Name", class: "form-label" %>
    <%= f.text_field :name,
          required: true,
          placeholder: "e.g., Push-ups, Squats, Plank",
          class: "form-input #{exercise.errors[:name].any? ? 'border-red-300' : ''}" %>
    <% if exercise.errors[:name].any? %>
      <p class="mt-1 text-sm text-red-600">
        <%= exercise.errors.full_messages_for(:name).join(', ') %>
      </p>
    <% end %>
  </div>

  <div>
    <%= f.label :repeat_count, "Repeat Count", class: "form-label" %>
    <%= f.number_field :repeat_count,
          required: true,
          min: 1,
          inputmode: "numeric",
          pattern: "[0-9]*",
          placeholder: "e.g., 10, 15, 20",
          class: "form-input #{exercise.errors[:repeat_count].any? ? 'border-red-300' : ''}" %>
    <% if exercise.errors[:repeat_count].any? %>
      <p class="mt-1 text-sm text-red-600">
        <%= exercise.errors.full_messages_for(:repeat_count).join(', ') %>
      </p>
    <% end %>
  </div>

  <div>
    <%= f.label :video_url, "Video URL (optional)", class: "form-label" %>
    <%= f.url_field :video_url,
          placeholder: "https://youtube.com/watch?v=...",
          class: "form-input #{exercise.errors[:video_url].any? ? 'border-red-300' : ''}" %>
    <% if exercise.errors[:video_url].any? %>
      <p class="mt-1 text-sm text-red-600">
        <%= exercise.errors.full_messages_for(:video_url).join(', ') %>
      </p>
    <% end %>
  </div>

  <div>
    <%= f.label :description, "Description (optional)", class: "form-label" %>
    <%= f.hidden_field :description, id: "exercise_description_hidden_#{exercise.object_id}" %>
    <div id="exercise-description-editor-<%= exercise.object_id %>" class="border border-gray-300 rounded-sm" style="height: 250px;"></div>
    <% if exercise.errors[:description].any? %>
      <p class="mt-1 text-sm text-red-600">
        <%= exercise.errors.full_messages_for(:description).join(', ') %>
      </p>
    <% end %>
  </div>

  <script>
    (function() {
      const editorId = 'exercise-description-editor-<%= exercise.object_id %>';
      const hiddenFieldId = 'exercise_description_hidden_<%= exercise.object_id %>';

      // Only initialize once
      if (document.getElementById(editorId).dataset.initialized) {
        return;
      }

      document.getElementById(editorId).dataset.initialized = 'true';

      const [editor] = new OverType('#' + editorId, {
        value: <%= raw exercise.description.to_json %> || '',
        placeholder: 'Use markdown to format your description...\n\n**Bold** or _italic_\n- List items\n- More items',
        onChange: (value) => {
          document.getElementById(hiddenFieldId).value = value;
        }
      });

      // Set initial value in hidden field
      document.getElementById(hiddenFieldId).value = editor.getValue();
    })();
  </script>

  <div class="flex gap-3 justify-end">
    <% if exercise.new_record? %>
      <%= link_to "Cancel", program_path(program), data: { turbo_frame: "exercise-form-frame" }, class: "inline-flex items-center justify-center px-6 py-3 border border-[rgb(26,26,26)] text-base font-medium rounded-sm text-[rgb(26,26,26)] bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors min-h-[44px]" %>
    <% else %>
      <%= link_to "Cancel", exercise_path(exercise), data: { turbo_frame: "exercise-#{exercise.id}" }, class: "inline-flex items-center justify-center px-6 py-3 border border-[rgb(26,26,26)] text-base font-medium rounded-sm text-[rgb(26,26,26)] bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors min-h-[44px]" %>
    <% end %>
    <%= render "shared/button",
      text: (exercise.new_record? ? "Add Exercise" : "Update Exercise"),
      icon: "save",
      icon_position: :left,
      type: :primary,
      size: :base,
      html_options: { type: "submit" } %>
  </div>
<% end %>
