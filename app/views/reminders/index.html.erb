<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Workout Reminders</h1>

  <% if @reminders.any? %>
    <div class="space-y-4">
      <% @reminders.each do |reminder| %>
        <div class="border rounded-lg p-4">
          <h3 class="font-semibold"><%= reminder.program.title %></h3>
          <p class="text-gray-600">
            <%= reminder.days_of_week.join(", ").capitalize %> at <%= reminder.time.strftime("%I:%M %p") %>
          </p>
          <p class="text-sm text-gray-500">Enabled: <%= reminder.enabled ? "Yes" : "No" %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No reminders yet.</p>
  <% end %>
</div>
