<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <%# Header %>
    <div class="text-center mb-8">
      <h1 class="text-h1 text-[rgb(26,26,26)] mb-2">
        Account Recovery
      </h1>
      <p class="text-body text-[rgb(107,114,128)]">
        Enter your email to receive a recovery code
      </p>
    </div>

    <%# White card container for form %>
    <div class="bg-white rounded-sm shadow-sm p-8">
      <%= form_with url: create_account_recovery_path, method: :post, class: "space-y-6" do |f| %>
        <%# Email input field %>
        <div>
          <%= f.email_field :email,
                required: true,
                autofocus: true,
                placeholder: "Email",
                class: "form-input" %>
        </div>

        <%# Info text %>
        <p class="text-sm text-[rgb(107,114,128)]">
          We'll send a 6-digit code to your email if an account exists.
        </p>

        <%# Action buttons %>
        <div class="space-y-3">
          <%= render 'shared/button',
                text: 'Send Recovery Code',
                type: :primary,
                html_options: {
                  onclick: "this.closest('form').requestSubmit(); return false;",
                  class: 'w-full'
                } %>

          <%= render 'shared/button',
                text: 'Back to Sign In',
                url: signin_path,
                type: :secondary,
                html_options: { class: 'w-full' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
